<h1><%= @category.name %></h1>

<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.recipe.name %> | <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Link to Categories", categories_path, class: "back-link" %>
<%= link_to "Add a recipe", new_category_bookmark_path(@category), class: "add-bookmark-link" %>
